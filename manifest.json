{
	"name": "autoRefresher",
	"version": "0.1",
	"manifest_version": 3,
	"permissions": ["storage", "scripting", "activeTab", "tabs"],
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["script.js"]
		}
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	},
	"icons": {
		"16": "icon.png",
		"32": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	}

}